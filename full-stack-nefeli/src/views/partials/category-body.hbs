<div class="body row">
            <div class="left-body col-2">
                
                <div class="mx-4 mt-4">
                    <label for="categorie">Categories</label>
                </div>

                <div class="mx-2 my-0">
                    <ul class="categ-list col-12">
                        {{#each CategoriesBox}}
                            <li>
                                <input type="checkbox" id="categ-check">
                                <label for="{{this.name}}">#{{{this.name}}}</label><br>
                            </li>
                        {{/each}}
                        
                    </ul>
                </div>

               

                <div class="mx-4">
                    <input type="checkbox">
                    <label for="sub"> Subscribed</label>
                </div>

                <div class="mx-2 my-2">
                    <input type="text" placeholder="Created by...">
                </div>

            </div>

            <div class="right-body col-10">
                <div class="upper-body row">
                    <div class="upper-body-dom col-12 row">
                        <div class="col-6 text-right">
                            <label for="categ-h1" class="m-3 px-4">Categories</label>
                        </div>
                        <div class="col-6">
                            <button class="my-5"> + Request New Categorie</button>
                        </div>
                        <select name="choose-by" class="choose-by mx-4">
                            <option value="all">All</option>
                            <option value="posts">By posts</option>
                            <option value="alpha">Alphabetically</option>
                        </select>
                    </div>
                </div>

                <div class="main-body row px-4 text-center">
                    <ul class="row">
                        {{#each CategoriesBox}}
                            <a href="/posts:{{this.name}}">
                            <li>
                                <div>
                                    <label for="">Categorie: {{this.name}}</label><br>
                                    <label for=""> Created by: {{this.CreatedBy}}</label><br>
                                    <label for="">Posts: {{this.numOfPosts}}</label><br>
                                    
                                    <label for="">Subscribed: {{this.numOfSubs}}</label>
                                </div>
                            </li>
                        </a>
                        {{/each}}
                    </ul>

                </div>
            </div>